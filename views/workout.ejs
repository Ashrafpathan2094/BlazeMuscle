    <div id="Chest" class="tabcontent">

        <div class = "row item">

            <% Exercises.forEach(function(current){ %>
                <% if(current.Muscle === 'Chest'){ %>

                <div class = "col-md-4">
                    <div class="row item">
                        <div class="thumbnail">
                            <img src="<%= current.ImagePath %>" alt="<%= current.Name %>" class="img-thumbnail img-responsive">
                            <div class="caption">
                                <p class="Title"><strong> <%= current.Name %> </strong></p>
                            </div>
                        </div>
                        <div class='add-to-log'>
                            <button class='btn btn-primary' onclick='toggleLog(event,"<%= current.Name%>")'>
                            <% if(typeof log!=='undefined' && log.length > 0){ %>
                            <% var flag = false;%>
                            <% for(var i=0;i<log.length;i++){%>
                                <% if(log[i].Name === current.Name ){%>
                                    <% flag = true; %>
                                    <% break; %>
                                <% } %>
                            <% } %>
                                <% if(flag === true ){ %>
                                    Remove from Log
                                <% } else {%>
                                    Add to Log
                                <% } %>
                        <% } else { %>
                            Add to Log
                        <% } %>
                            </button>
                        </div>
                    </div>
                </div>
                
                <% }%>
                <% });%>

        </div>

    </div>


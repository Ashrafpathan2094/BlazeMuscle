<% include partials/header%>

<% include partials/navigation%>

<hr>

<div class="container">
<div id="log-list">

<% if(typeof log !== 'undefined' && log.length > 0){ %>

    <% log.forEach(function(current){ %>
    
        <div class="row log-item">
        
            <div class="col-md-3">
                <div class="thumbnail">
                    <img src="<%= current.ImagePath %>" class="exercise-image" alt="<%= current.Name %>">
                </div>
            </div>
            <div class="col-md-6">
                <h3 class='exercise-name'> <%= current.Name %> </h3>
            </div>
            <div class="col-md-3">
                <br>
                <br>
                <p>
                    <div class="set-group">
                    <button type="button" class="btn btn-danger" id="decrement" onclick="decrement(event)">
                    <i class="fa fa-minus" aria-hidden="true"></i>
                    </button>
                    <input type="number" id="set" name="set" class="set-box" value="1" oninput="validateQuantity(event)">
                    <button type="button" class="btn btn-success" id="increment" onclick="increment(event)">
                    <i class="fa fa-plus" aria-hidden="true"></i>
                    </button>
                    </div>
                    
                    <div class="reps-group">
                    <button type="button" class="btn btn-danger" id="decrement" onclick="decrement(event)">
                    <i class="fa fa-minus" aria-hidden="true"></i>
                    </button>
                    <input type="number" id="reps" name="reps" class="reps-box" value="1" oninput="validateQuantity(event)">
                    <button type="button" class="btn btn-success" id="increment" onclick="increment(event)">
                    <i class="fa fa-plus" aria-hidden="true"></i>
                    </button>
                    </div>
                    
                    &nbsp;&nbsp;&nbsp;
                </p>
                <i class="fa fa-trash" onClick ='removeItem(event,"<%= current.Name %>")'></i>
                <hr>
            </div>

        </div>

        <% }) %>
        <div>
            <hr>
        </div>
        <% } else { %>
        <h3> Log is Empty! &nbsp; Select items from exercises to add. </h3>
        <% } %>   
        </div> 
        <br>

        <div class="row">
            <form>
            <button class="btn btn-success btn-lg save-button" onclick='save(event)'>Save Workout</button>
            <button class="btn btn-default btn-lg empty-log-button" id="empty-log">Empty Log</button>
            </form>
        </div>
    </div>

<script src='/js/log.js'></script>

<% include partials/footer%>
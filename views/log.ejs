<% include partials/header%>
<% include partials/navigation%>

    <hr>

    <div class="container">
        <div id="log-list">

        <% if(typeof log !== 'undefined' && log.length > 0){ %>
            <table class="table table-condensed table-striped">
            <thead>
                
                <th class="col-xs-5"> Food Item</th>
                <th class="col-xs-2"> Weight </th>
                <th class="col-xs-2"> Sets </th>
                <th class="col-xs-2">Reps</th>
                <th class="col-xs-1">  </th>
            </thead>
            <tbody>
            <% log.forEach(function(current){ %>
                <tr class="item">
                    <td>
                        <img src="<%=current.ImagePath%>" class="exercise-image" alt="<%=current.Name%>" style="width:72px;height : 72px;">
                        <h4 class='exercise-name'> <%=current.Name%> </h4>
                    </td>
                        
                    <td>
                        <input type="text" id="weight" name="weight" class="weight-box form-control input-number" value="1">
                    </td>
                    
                    <td>
                        <div class="quantity-group input-group">
                            <span class="input-group-btn">
                                <button type="button" class="btn btn-danger decrement" id="decrement" onclick="decrement()">
                                <i class="fa fa-minus" aria-hidden="true"></i>
                                </button>
                            </span>
                        <input type="text" id="set" name="set" class="set-box form-control input-number" value="1" oninput="validateQuantity()">
                            <span class="input-group-btn">
                                <button type="button" class="btn btn-success increment" id="increment" onclick="increment()">
                                <i class="fa fa-plus" aria-hidden="true"></i>
                                </button>
                            </span>
                        </div>
                    </td>
                    <td>
                        <div class="quantity-group input-group">
                            <span class="input-group-btn">
                                <button type="button" class="btn btn-danger decrement" id="decrement" onclick="decrement()">
                                <i class="fa fa-minus" aria-hidden="true"></i>
                                </button>
                            </span>
                        <input type="text" id="rep" name="rep" class="rep-box form-control input-number" value="1" oninput="validateQuantity()">
                            <span class="input-group-btn">
                                <button type="button" class="btn btn-success increment" id="increment" onclick="increment()">
                                <i class="fa fa-plus" aria-hidden="true"></i>
                                </button>
                            </span>
                        </div>
                    </td>
                    <td>
                        <i class="fa fa-trash" onclick ='removeItem("<%=current.Name%>")'></i>
                    </td>
                </tr>
            
                <% }) %>
            </tbody>
            </table>
                <% } else { %>
                <h3> Log is Empty! &nbsp; Select items from Workout to add. </h3>
                <% } %>   

        </div> 
                <br>

                <div class="row">
                    <form>
                    <button class="btn btn-success btn-lg check-out-button" onclick='save()'>Save Workout</button>
                    <button class="btn btn-default btn-lg empty-cart-button" id="empty-log" onclick = 'clearLog()'>Empty Log</button>
                    </form>
                </div>
    </div>
              
<% include partials/footer%>
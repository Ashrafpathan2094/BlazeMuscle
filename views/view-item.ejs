<% include partials/header %>
<div class="hold-transition skin-purple sidebar-mini">
    <% include partials/admin-header%>
    <div class="wrapper">
    <%include partials/admin-sidebar%>
        <div class="content-wrapper">
                <section class="content container-fluid">
<div class='admin-main'>

    <% include partials/_messages %>

    <div class="table-responsive">

        <table id="item-table" class='table table-striped table-condensed'>
        <thead>
            <th> Item ID </th>
            <th> Name </th>
            <th> Category </th>
            <th> Price </th>
            <th> Units </th>
            <th> Total </th>
            <th> Edit </th>
            <th> Delete </th>
        </thead>
        <tbody>
            <% if(Item && Item.length > 0){
                 Item.forEach(function(current){ %>
                    <tr>
                        <td><%= current._id %></td>
                        <td><%= current.Name%></td>
                        <td><%= current.Category%></td>
                        <td><%= current.Price%></td>
                        <td><%= current.Units%></td>                       
                        <td>
                            <%= parseInt(current.Price) * parseInt(current.Units)%>  
                        </td>
                        <td>
                            <form action='/admin/item/<%=current._id%>/modify%>' method='get'>
                                <button class='icon' onclick='validateAction()'> <i class="fa fa-pencil"></i> </button>
                            </form>
                        </td>
                        <td>
                            <form action='/admin/item/<%=current._id%>/delete%>' method='post'>
                                <button class='icon' onclick="validateAction()"> <i class="fa fa-trash"></i> </button>
                            </form>
                        </td>
                    </tr>

                <% });
             } %>
            </tbody>
        </table>
    </div>
</section>
</div>
</div>
</div>
<% include partials/footer%>
<script>
$('#item-table').DataTable({
"lengthMenu": [ 10,15,20 ]
});
</script>